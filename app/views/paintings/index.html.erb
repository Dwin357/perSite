<%= render partial: "sharedPartials/tab_text", locals: {text: "Gallary"} %>

<div class='container'>
  <h2 class="section-title">Paintings index</h2>

  <ul id='painting-list'>
    <% @paintings.each do |painting| %>
      <li class='painting-title'>
        <%= link_to image_tag(painting.image_url(:thumb).to_s), painting %>
        <%=  "- #{painting.title}" %>
      </li>
    <% end %>
  </ul>
</div>

