<div id='menu-bar'>
	<ul id='menu-list'>
		<li class='menu-list-item'><%= link_to "splash", root_path, :class => "menu-btn" %> </li>
		<li class='menu-list-item'><%= link_to "post index", posts_path, :class => "menu-btn" %></li>
	
		<% if logged_in? %>
			<li class='menu-list-item'><%= link_to "new post", new_post_path, :class => "menu-btn" %></li>
		<% end %>

		
		<% if !logged_in? %>
			<li class='menu-list-item'><%= link_to "new user", new_user_path, :class => "menu-btn" %></li>
			<li class='menu-list-item'><%= link_to "new session", login_path, :class => "menu-btn" %></li>
		<% end %>
		<% if logged_in? %>
			<li class='menu-list-item'><%= link_to "log out", logout_path, method: :delete, :class => "menu-btn" %></li>
		<% end %>


	</ul>
</div>