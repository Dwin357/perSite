<%= render partial: "sharedPartials/tab_text", locals: {text: "Posts"} %>

<div class='container'>
	<h2 class="section-title">Post index</h2>

	<ul id='post-list'>
		<% @posts.each do |post| %>
			<li class='post-title'>
        <%= link_to "#{post.title}", post %>
        <% if current_user && current_user.owns?(post) %>
          <%= link_to " edit,", edit_post_path(post) %>
          <%= link_to " nuke", post, method: :delete %>
        <% end %>
      </li>
		<% end %>
	</ul>
</div>
