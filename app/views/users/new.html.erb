<h1> Sign Up</h1>

	<%= render partial: "partials/error_box", locals: {brokenModel: @user} %>
	
<%= form_for @user do |form| %>
	<%= render partial: "partials/user_form_fields", locals: {f: form} %>

<div class="field">
	<%#= f.label :username %>
	<%#= f.text_field :username %>
</div>
<div class="field">
	<%#= f.label :password %>
	<%#= f.password_field :password %>
</div>
<div class="field">
	<%#= f.label :password_confirmation %>
	<%#= f.password_field :password_confirmation %>
</div>

<div class="actions"><%= form.submit %></div>


<% end %>